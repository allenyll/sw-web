    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        order_id
        order_detail_id
        goods_id
        customer_id
        aftersale_type
        aftersale_status
        aftersale_reason
        apply_file
        refund_point
        use_point_amount
        get_point_amount
        refund_amount
        refund_type
        refund_quality
        refund_remark
        return_type
        refuse_reason
        delivery_company
        delivery_no
        receiver_name
        receiver_phone
        receiver_post_code
        receiver_province
        receiver_city
        receiver_region
        receiver_detail_address
