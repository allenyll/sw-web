    <select id="selectAftersaleList" resultType="com.sw.common.dto.OrderAftersaleDto" parameterType="com.sw.common.dto.OrderQueryDto">
        SELECT
            t.id,
            t.order_id,
            t.order_detail_id,
            t.goods_id,
            t.customer_id,
            t.aftersale_type,
            t.aftersale_status,
            t.aftersale_reason,
            t.apply_file,
            t.refund_point,
            t.use_point_amount,
            t.get_point_amount,
            t.refund_amount,
            t.refund_type,
            t.refund_quality,
            t.refund_remark,
            t.return_type,
            t.refuse_reason,
            t.delivery_company,
            t.delivery_no,
            t.receiver_name,
            t.receiver_phone,
            t.receiver_post_code,
            t.receiver_province,
            t.receiver_city,
            t.receiver_region,
            t.receiver_detail_address,
            t.delivery_time,
            t.apply_time,
            t.deal_time,
            t.audit_time,
            t.cancel_time,
            t.deal_user,
            t.deal_user_name,
            t.deal_note,
            t.is_delete,
            t.add_user,
            t.add_time,
            t.update_user,
            t.update_time,
            t2.goods_name,
            t2.goods_code,
            t2.price,
            t1.order_no,
            t1.order_status,
            t1.order_time,
            t1.order_amount,
            t1.pay_amount
        FROM
            snu_order_aftersale t
        LEFT JOIN snu_order t1 ON t1.id = t.order_id
        LEFT JOIN snu_goods t2 ON t2.id = t.goods_id
        WHERE t.customer_id = #{customerId}
    </select>

